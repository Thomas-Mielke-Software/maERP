<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maERP.Client.Views.ProductsDetailPage"
             xmlns:viewmodel="clr-namespace:maERP.Client.ViewModels"
             x:DataType="viewmodel:ProductsDetailViewModel"
             Title="{Binding Title}">

<ScrollView>
        <VerticalStackLayout>

             <Button Text="Get Product" 
                Command="{Binding GetProductDetailCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>
            
            <Label Text="ID" />
            <Entry Text="{Binding Product.Id}" />

            <Label Text="Name" />
            <Entry Text="{Binding Product.Name}" />

            <Label Text="SKU" />
            <Entry Text="{Binding Product.SKU}" />
        </VerticalStackLayout>

</ScrollView>

</ContentPage>
