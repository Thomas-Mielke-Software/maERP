@page "/TaxClasses/add"
@page "/TaxClasses/edit/{taxClassId:int}"

@using Microsoft.AspNetCore.Authorization
@using maERP.Shared.Contracts;
@using maERP.Shared.Services;
@using maERP.Shared.Dtos.TaxClass;

@attribute [Authorize]

@inject NavigationManager _navManager;
@inject IDataService<TaxClassDetailDto> _dataService;

<h1>Steuersatz</h1>

<hr />

<EditForm Model="@taxClass">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="Name" class="form-label">Steuersatz</label>
        <div class="col-md-4">
            <input class="form-control" @bind="taxClass.TaxRate" />
        </div>
        <ValidationMessage For="@(() => taxClass.TaxRate)" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" @onclick="SaveTaxClass">Speichern</button>
        <button class="btn btn-light" @onclick="Cancel">Abbrechen</button>
    </div>
</EditForm>

@code {

    [Parameter]
    public int taxClassId { get; set; }

    protected string Title = "hinzufügen";

    protected TaxClassDetailDto taxClass = new();

    protected override async Task OnParametersSetAsync()
    {
        if (taxClassId != 0)
        {
            Title = "Bearbeiten";
            taxClass = await _dataService.Request("GET", "/TaxClasses/" + taxClassId);
        }

        await Task.CompletedTask;
    }

    protected async Task SaveTaxClass()
    {
        await Task.CompletedTask;

        if (taxClass.Id != 0)
        {
            await _dataService.Request("PUT", "/TaxClasses/" + taxClassId, taxClass);
        }
        else
        {
            await _dataService.Request("POST", "/TaxClasses", taxClass);
        }
        Cancel();
    }

    public void Cancel()
    {
        _navManager.NavigateTo("/TaxClasses");
    }
}