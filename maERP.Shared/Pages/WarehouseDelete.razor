@page "/Warehouses/delete/{warehouseId:int}"

@using Microsoft.AspNetCore.Authorization
@using maERP.Shared.Contracts

@attribute [Authorize]

@inject NavigationManager NavigationManager
@inject IDataService<string> DataService

@code {

    [Parameter]
    public uint warehouseId { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (warehouseId > 0)
        {
            await DataService.Request("DELETE", "/Warehouses/" + warehouseId);
            NavigationManager.NavigateTo("/Warehouses");
        }
    }
}