@page "/SalesChannels"
@using Microsoft.AspNetCore.Authorization
@using maERP.Shared.Contracts
@using maERP.Shared.Dtos.SalesChannel

@attribute [Authorize]

@inject NavigationManager NavigationManager
@inject IDataService<ICollection<SalesChannelListDto>> DataService

<PageTitle>Vertriebskanäle</PageTitle>

<MudText Typo="Typo.h4" Class="mb-8">Bestellungen</MudText>

@if (salesChannels == null)
{
    <p><em>Lade...</em></p>
}
else
{
    <MudDataGrid Items="@salesChannels" SortMode="SortMode.Single" Class="mb-8">
        <Columns>
            <PropertyColumn Property="x => x.Name" Title="Name" />
            <PropertyColumn Property="x => x.Url" Title="URL" />
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudButton Href="@($"/SalesChannels/{context.Item.Id}/edit")" Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">Bearbeiten</MudButton>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>

    <MudButton Href="/SalesChannels/add" Variant="Variant.Filled" Color="Color.Primary">Neu</MudButton>
}

@code {

    private ICollection<SalesChannelListDto>? salesChannels;

    protected override async Task OnInitializedAsync()
    {
        salesChannels = await DataService.Request("GET", "/SalesChannels/GetAll");
    }
}