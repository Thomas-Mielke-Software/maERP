<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maERP.Client.Views.LoginPage"
             Title="Login">

    <StackLayout>
        <Label Text="Server:" Margin="0,5,0,0" />
        <Entry x:Name="tbxServer" Text="https://localhost:7028" />
        <Label Text="Username:" Margin="0,5,0,0" />
        <Entry x:Name="tbxUsername" Text="admin@localhost.com" />
        <Label Text="Password:" Margin="0,5,0,0" />
        <Entry x:Name="pbxPassword" Text="maERP!12" />
        <Button x:Name="btnLogin" Padding="5" Margin="0,5,0,0" Text="Login" Clicked="btnLogin_Clicked" />
        <Button x:Name="btnExit" Padding="5" Margin="0,5,0,0" Text="Beenden" Clicked="btnExit_Clicked" />
    </StackLayout>

</ContentPage>