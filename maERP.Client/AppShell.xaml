<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:maERP.Client.Views"
             x:Class="maERP.Client.AppShell"
             Title="AppShell"
             BackgroundColor="Black"
             FlyoutBehavior="Locked"
             Shell.TabBarIsVisible="False">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Login" ContentTemplate="{DataTemplate view:LoginPage}" FlyoutItemIsVisible="False" />
        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate view:DashboardPage}"/>
        <ShellContent Title="Bestellungen" ContentTemplate="{DataTemplate view:OrdersPage}"/>
        <ShellContent Title="Artikel" ContentTemplate="{DataTemplate view:ProductsPage}"/>
        <Tab Title="Einstellungen">
            <ShellContent Title="Einstellungen" ContentTemplate="{DataTemplate view:SettingsPage}"/>
        </Tab>
    </FlyoutItem>
    
</Shell>