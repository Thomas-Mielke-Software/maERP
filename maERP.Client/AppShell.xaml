<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Views="clr-namespace:maERP.Client.Views"
             x:Class="maERP.Client.AppShell"
             Title="AppShell"
             BackgroundColor="Black">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate Views:MainPage}"/>
        <ShellContent Title="Bestellungen" ContentTemplate="{DataTemplate Views:OrdersPage}"/>
        <ShellContent Title="Artikel" ContentTemplate="{DataTemplate Views:ProductsPage}"/>
        <Tab Title="Einstellungen">
            <ShellContent Title="Einstellungen" ContentTemplate="{DataTemplate Views:SettingsPage}"/>
        </Tab>
    </FlyoutItem>
</Shell>