<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="maERP.UI.Features.Dashboard.Views.DashboardView">

  <ScrollViewer>
    <StackPanel Margin="24" Spacing="24">
      
      <!-- Header -->
      <StackPanel Spacing="6">
        <TextBlock Text="{Binding WelcomeMessage}" 
                   FontSize="{DynamicResource FontSizeHeadlineL}" 
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource OnSurfaceBrush}"/>
        <TextBlock Text="{Binding CurrentDate, StringFormat='Heute ist {0:dddd, dd. MMMM yyyy}'}" 
                   FontSize="{DynamicResource FontSizeBodyM}" 
                   Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
      </StackPanel>
      
      <!-- Dashboard Cards Grid -->
      <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" Margin="0,12,0,0">
        <Grid.Styles>
          <Style Selector="Border.card">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainerBrush}"/>
            <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusM}"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BoxShadow" Value="{DynamicResource ElevationLevel1}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource OutlineVariantBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
          </Style>
          <Style Selector="TextBlock.card-title">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeBodyS}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariantBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
          </Style>
          <Style Selector="TextBlock.card-value">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeHeadlineM}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
          </Style>
        </Grid.Styles>
        
        <!-- Kunden Card -->
        <Border Classes="card" Grid.Column="0" Grid.Row="0">
          <StackPanel>
            <TextBlock Classes="card-title" Text="Kunden"/>
            <TextBlock Classes="card-value" Text="1,234"/>
            <TextBlock Text="+12% diesen Monat" FontSize="{DynamicResource FontSizeLabelS}" Foreground="{DynamicResource SuccessBrush}"/>
          </StackPanel>
        </Border>
        
        <!-- Bestellungen Card -->
        <Border Classes="card" Grid.Column="1" Grid.Row="0">
          <StackPanel>
            <TextBlock Classes="card-title" Text="Bestellungen"/>
            <TextBlock Classes="card-value" Text="456"/>
            <TextBlock Text="+8% diesen Monat" FontSize="{DynamicResource FontSizeLabelS}" Foreground="{DynamicResource SuccessBrush}"/>
          </StackPanel>
        </Border>
        
        <!-- Umsatz Card -->
        <Border Classes="card" Grid.Column="2" Grid.Row="0">
          <StackPanel>
            <TextBlock Classes="card-title" Text="Umsatz"/>
            <TextBlock Classes="card-value" Text="€89,432"/>
            <TextBlock Text="+15% diesen Monat" FontSize="{DynamicResource FontSizeLabelS}" Foreground="{DynamicResource SuccessBrush}"/>
          </StackPanel>
        </Border>
        
        <!-- Produkte Card -->
        <Border Classes="card" Grid.Column="0" Grid.Row="1">
          <StackPanel>
            <TextBlock Classes="card-title" Text="Produkte"/>
            <TextBlock Classes="card-value" Text="2,789"/>
            <TextBlock Text="687 auf Lager" FontSize="{DynamicResource FontSizeLabelS}" Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
          </StackPanel>
        </Border>
        
        <!-- Rechnungen Card -->
        <Border Classes="card" Grid.Column="1" Grid.Row="1">
          <StackPanel>
            <TextBlock Classes="card-title" Text="Offene Rechnungen"/>
            <TextBlock Classes="card-value" Text="23"/>
            <TextBlock Text="€12,456 Gesamtwert" FontSize="{DynamicResource FontSizeLabelS}" Foreground="{DynamicResource OnSurfaceVariantBrush}"/>
          </StackPanel>
        </Border>
        
        <!-- Lager Card -->
        <Border Classes="card" Grid.Column="2" Grid.Row="1">
          <StackPanel>
            <TextBlock Classes="card-title" Text="Lagerbestände"/>
            <TextBlock Classes="card-value" Text="95%"/>
            <TextBlock Text="Ausreichend" FontSize="{DynamicResource FontSizeLabelS}" Foreground="{DynamicResource SuccessBrush}"/>
          </StackPanel>
        </Border>
        
      </Grid>
      
      <!-- Quick Actions -->
      <StackPanel Spacing="12">
        <TextBlock Text="Schnellaktionen" 
                   FontSize="{DynamicResource FontSizeHeadlineS}" 
                   FontWeight="SemiBold" 
                   Foreground="{DynamicResource OnSurfaceBrush}"/>
        <StackPanel Orientation="Horizontal" Spacing="8">
          
          <Button Content="Neue Bestellung" 
                  Padding="14,10" 
                  CornerRadius="{DynamicResource CornerRadiusS}"
                  Background="{DynamicResource PrimaryBrush}"
                  Foreground="{DynamicResource OnPrimaryBrush}"
                  FontSize="{DynamicResource FontSizeBodyS}"
                  FontWeight="Medium"
                  Command="{Binding CreateOrderCommand}"/>
          
          <Button Content="Kunde hinzufügen" 
                  Padding="14,10" 
                  CornerRadius="{DynamicResource CornerRadiusS}"
                  Background="{DynamicResource SecondaryContainerBrush}"
                  Foreground="{DynamicResource OnSecondaryContainerBrush}"
                  FontSize="{DynamicResource FontSizeBodyS}"
                  FontWeight="Medium"
                  Command="{Binding CreateCustomerCommand}"/>
          
          <Button Content="Rechnung erstellen" 
                  Padding="14,10" 
                  CornerRadius="{DynamicResource CornerRadiusS}"
                  Background="{DynamicResource TertiaryContainerBrush}"
                  Foreground="{DynamicResource OnTertiaryContainerBrush}"
                  FontSize="{DynamicResource FontSizeBodyS}"
                  FontWeight="Medium"
                  Command="{Binding ManageInvoicesCommand}"/>
          
          <Button Content="Lager verwalten" 
                  Padding="14,10" 
                  CornerRadius="{DynamicResource CornerRadiusS}"
                  Background="{DynamicResource SurfaceVariantBrush}"
                  Foreground="{DynamicResource OnSurfaceVariantBrush}"
                  FontSize="{DynamicResource FontSizeBodyS}"
                  FontWeight="Medium"
                  Command="{Binding ManageWarehousesCommand}"/>
          
        </StackPanel>
      </StackPanel>
      
    </StackPanel>
  </ScrollViewer>
  
</UserControl>