<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="maERP.UI.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>

    <Application.Resources>
        <!-- Modern Material 3 Design System -->
        
        <!-- Corner Radius System (Material 3 inspired) -->
        <CornerRadius x:Key="CornerRadiusXS">2</CornerRadius>
        <CornerRadius x:Key="CornerRadiusS">4</CornerRadius>
        <CornerRadius x:Key="CornerRadiusM">8</CornerRadius>
        <CornerRadius x:Key="CornerRadiusL">12</CornerRadius>
        <CornerRadius x:Key="CornerRadiusXL">16</CornerRadius>
        <CornerRadius x:Key="CornerRadiusXXL">20</CornerRadius>
        
        <!-- Material 3 Elevation System -->
        <BoxShadows x:Key="ElevationLevel0">0 0 0 0 #00000000</BoxShadows>
        <BoxShadows x:Key="ElevationLevel1">0 1 3 1 #1F000000, 0 1 2 0 #14000000</BoxShadows>
        <BoxShadows x:Key="ElevationLevel2">0 2 6 2 #1F000000, 0 1 2 0 #14000000</BoxShadows>
        <BoxShadows x:Key="ElevationLevel3">0 4 8 3 #1F000000, 0 1 3 0 #14000000</BoxShadows>
        <BoxShadows x:Key="ElevationLevel4">0 6 10 4 #1F000000, 0 2 3 0 #14000000</BoxShadows>
        <BoxShadows x:Key="ElevationLevel5">0 8 12 6 #1F000000, 0 4 4 0 #14000000</BoxShadows>
        
        <!-- OpenAI-inspired Spacing System (4px base) -->
        <x:Double x:Key="SpaceXXS">2</x:Double>
        <x:Double x:Key="SpaceXS">4</x:Double>
        <x:Double x:Key="SpaceS">6</x:Double>
        <x:Double x:Key="SpaceM">8</x:Double>
        <x:Double x:Key="SpaceL">12</x:Double>
        <x:Double x:Key="SpaceXL">16</x:Double>
        <x:Double x:Key="SpaceXXL">20</x:Double>
        <x:Double x:Key="SpaceXXXL">24</x:Double>
        <x:Double x:Key="Space4XL">32</x:Double>
        <x:Double x:Key="Space5XL">40</x:Double>
        
        <!-- OpenAI-inspired Typography Scale -->
        <x:Double x:Key="FontSizeDisplayL">48</x:Double>
        <x:Double x:Key="FontSizeDisplayM">36</x:Double>
        <x:Double x:Key="FontSizeDisplayS">32</x:Double>
        <x:Double x:Key="FontSizeHeadlineL">24</x:Double>
        <x:Double x:Key="FontSizeHeadlineM">20</x:Double>
        <x:Double x:Key="FontSizeHeadlineS">18</x:Double>
        <x:Double x:Key="FontSizeTitleL">16</x:Double>
        <x:Double x:Key="FontSizeTitleM">15</x:Double>
        <x:Double x:Key="FontSizeTitleS">14</x:Double>
        <x:Double x:Key="FontSizeBodyL">15</x:Double>
        <x:Double x:Key="FontSizeBodyM">14</x:Double>
        <x:Double x:Key="FontSizeBodyS">13</x:Double>
        <x:Double x:Key="FontSizeLabelL">13</x:Double>
        <x:Double x:Key="FontSizeLabelM">12</x:Double>
        <x:Double x:Key="FontSizeLabelS">11</x:Double>
        
        <!-- Legacy font size references for compatibility -->
        <x:Double x:Key="FontSizeCaption">12</x:Double>
        <x:Double x:Key="FontSizeBody">14</x:Double>
        <x:Double x:Key="FontSizeSubtitle">18</x:Double>
        <x:Double x:Key="FontSizeTitle">24</x:Double>
        <x:Double x:Key="FontSizeDisplay">36</x:Double>
        
        <!-- Material 3 Color System - Light Theme -->
        <!-- Primary Colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#6750A4"/>
        <SolidColorBrush x:Key="OnPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PrimaryContainerBrush" Color="#EADDFF"/>
        <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="#21005D"/>
        
        <!-- Secondary Colors -->
        <SolidColorBrush x:Key="SecondaryBrush" Color="#625B71"/>
        <SolidColorBrush x:Key="OnSecondaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryContainerBrush" Color="#E8DEF8"/>
        <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="#1D192B"/>
        
        <!-- Tertiary Colors -->
        <SolidColorBrush x:Key="TertiaryBrush" Color="#7D5260"/>
        <SolidColorBrush x:Key="OnTertiaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TertiaryContainerBrush" Color="#FFD8E4"/>
        <SolidColorBrush x:Key="OnTertiaryContainerBrush" Color="#31111D"/>
        
        <!-- Error Colors -->
        <SolidColorBrush x:Key="ErrorBrush" Color="#BA1A1A"/>
        <SolidColorBrush x:Key="OnErrorBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ErrorContainerBrush" Color="#FFDAD6"/>
        <SolidColorBrush x:Key="OnErrorContainerBrush" Color="#410002"/>
        
        <!-- Background Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFBFE"/>
        <SolidColorBrush x:Key="OnBackgroundBrush" Color="#1C1B1F"/>
        
        <!-- Surface Colors -->
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFBFE"/>
        <SolidColorBrush x:Key="OnSurfaceBrush" Color="#1C1B1F"/>
        <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#E7E0EC"/>
        <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#49454F"/>
        <SolidColorBrush x:Key="SurfaceContainerLowestBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceContainerLowBrush" Color="#F7F2FA"/>
        <SolidColorBrush x:Key="SurfaceContainerBrush" Color="#F1ECF4"/>
        <SolidColorBrush x:Key="SurfaceContainerHighBrush" Color="#ECE6F0"/>
        <SolidColorBrush x:Key="SurfaceContainerHighestBrush" Color="#E6E0E9"/>
        
        <!-- Outline Colors -->
        <SolidColorBrush x:Key="OutlineBrush" Color="#79747E"/>
        <SolidColorBrush x:Key="OutlineVariantBrush" Color="#CAC4D0"/>
        
        <!-- Inverse Colors -->
        <SolidColorBrush x:Key="InverseSurfaceBrush" Color="#313033"/>
        <SolidColorBrush x:Key="InverseOnSurfaceBrush" Color="#F4EFF4"/>
        <SolidColorBrush x:Key="InversePrimaryBrush" Color="#D0BCFF"/>
        
        <!-- Additional Colors -->
        <SolidColorBrush x:Key="ShadowBrush" Color="#000000"/>
        <SolidColorBrush x:Key="SurfaceTintBrush" Color="#6750A4"/>
        <SolidColorBrush x:Key="ScrimBrush" Color="#000000"/>
        
        <!-- Semantic Colors -->
        <SolidColorBrush x:Key="SuccessBrush" Color="#2E7D32"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F57C00"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#1976D2"/>
        
        <!-- Legacy color references for compatibility -->
        <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#FFFBFE"/>
        <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#CAC4D0"/>
        <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#6750A4"/>
        <SolidColorBrush x:Key="TextOnAccentFillColorPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextOnAccentFillColorSecondaryBrush" Color="#E6FFFFFF"/>
        <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#F7F2FA"/>
        <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#CAC4D0"/>
        <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#1C1B1F"/>
        <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#49454F"/>
        <SolidColorBrush x:Key="SubtleFillColorSecondaryBrush" Color="#F1ECF4"/>
        <SolidColorBrush x:Key="SubtleFillColorTertiaryBrush" Color="#E6E0E9"/>
        <SolidColorBrush x:Key="SystemFillColorSuccessBrush" Color="#2E7D32"/>
        <SolidColorBrush x:Key="SystemFillColorCautionBrush" Color="#F57C00"/>
        <SolidColorBrush x:Key="SystemFillColorCriticalBrush" Color="#BA1A1A"/>
        <SolidColorBrush x:Key="SystemFillColorNeutralBrush" Color="#79747E"/>
        
        <!-- Dark theme variants - Material 3 Dark -->
        <SolidColorBrush x:Key="LayerFillColorDefaultBrushDark" Color="#10080E"/>
        <SolidColorBrush x:Key="CardStrokeColorDefaultBrushDark" Color="#49454F"/>
        <SolidColorBrush x:Key="AccentFillColorDefaultBrushDark" Color="#D0BCFF"/>
        <SolidColorBrush x:Key="TextOnAccentFillColorPrimaryBrushDark" Color="#371E73"/>
        <SolidColorBrush x:Key="TextOnAccentFillColorSecondaryBrushDark" Color="#E6371E73"/>
        <SolidColorBrush x:Key="ControlFillColorDefaultBrushDark" Color="#1D1B20"/>
        <SolidColorBrush x:Key="ControlStrokeColorDefaultBrushDark" Color="#49454F"/>
        <SolidColorBrush x:Key="TextFillColorPrimaryBrushDark" Color="#E6E1E5"/>
        <SolidColorBrush x:Key="TextFillColorSecondaryBrushDark" Color="#CAC4D0"/>
        <SolidColorBrush x:Key="SubtleFillColorSecondaryBrushDark" Color="#1D1B20"/>
        <SolidColorBrush x:Key="SubtleFillColorTertiaryBrushDark" Color="#211F26"/>
    </Application.Resources>

    <!-- DataTemplates werden zur Laufzeit über die ViewModels und Views verknüpft -->
    <Application.DataTemplates>
        <!-- DataTemplates werden in der Zukunft wieder hinzugefügt wenn alle Namespace-Referenzen repariert sind -->
    </Application.DataTemplates>
</Application>
