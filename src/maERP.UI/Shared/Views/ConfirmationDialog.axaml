<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="250"
        x:Class="maERP.UI.Shared.Views.ConfirmationDialog"
        Title="{Binding Title}"
        Width="450" Height="250"
        MinWidth="350" MinHeight="200"
        MaxWidth="600" MaxHeight="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        CanResize="False">

  <Grid RowDefinitions="*,Auto" Margin="24">
    
    <!-- Content -->
    <StackPanel Grid.Row="0" 
                Spacing="20" 
                VerticalAlignment="Center">
      
      <!-- Icon and Message -->
      <StackPanel Orientation="Horizontal" 
                  Spacing="16" 
                  HorizontalAlignment="Center">
        <TextBlock Text="{Binding Icon}" 
                   FontSize="32" 
                   VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Message}" 
                   TextWrapping="Wrap"
                   FontSize="14"
                   VerticalAlignment="Center"
                   MaxWidth="350"/>
      </StackPanel>
      
    </StackPanel>
    
    <!-- Buttons -->
    <StackPanel Grid.Row="1" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right" 
                Spacing="12" 
                Margin="0,20,0,0">
      <Button Content="{Binding CancelButtonText}" 
              Name="CancelButton"
              Padding="20,8"
              MinWidth="100"
              Click="CancelButton_Click"/>
      <Button Content="{Binding ConfirmButtonText}" 
              Name="ConfirmButton"
              Padding="20,8"
              MinWidth="100"
              Background="#DC3545"
              Foreground="White"
              Click="ConfirmButton_Click"/>
    </StackPanel>
    
  </Grid>

</Window>