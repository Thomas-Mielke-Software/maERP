<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:maERP.UI.ViewModels"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="maERP.UI.Views.OrderListView"
             x:DataType="vm:OrderListViewModel">

  <Grid RowDefinitions="Auto,*,Auto">
    
    <!-- Header mit Titel und Suche -->
    <Border Grid.Row="0" 
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            Padding="24,16"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,0,0,1">
      
      <Grid ColumnDefinitions="*,Auto,Auto">
        
        <!-- Titel -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
          <TextBlock Text="🛒 Bestellungen" 
                     FontSize="24" 
                     FontWeight="SemiBold"
                     Margin="0,0,0,4"/>
          <TextBlock Text="{Binding TotalCount, StringFormat=Gesamt: \{0\} Bestellungen}" 
                     FontSize="14" 
                     Opacity="0.7"/>
        </StackPanel>
        
        <!-- Suchfeld -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8" 
                    VerticalAlignment="Center"
                    Margin="16,0">
          
          <TextBox Text="{Binding SearchText}" 
                   Watermark="Nach Bestellungen suchen..."
                   Width="200"
                   VerticalAlignment="Center"/>
          
          <Button Content="🔍" 
                  Command="{Binding SearchOrdersCommand}"
                  VerticalAlignment="Center"
                  Padding="8"/>
          
        </StackPanel>
        
        <!-- Refresh Button -->
        <Button Grid.Column="2" 
                Content="🔄" 
                Command="{Binding RefreshCommand}"
                VerticalAlignment="Center"
                Padding="8"
                ToolTip.Tip="Aktualisieren"/>
        
      </Grid>
      
    </Border>
    
    <!-- Loading/Error/Content -->
    <Grid Grid.Row="1">
      
      <!-- Loading Indicator -->
      <StackPanel IsVisible="{Binding IsLoading}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"
                  Spacing="16">
        <ProgressBar IsIndeterminate="True" Width="200"/>
        <TextBlock Text="Bestellungen werden geladen..." 
                   HorizontalAlignment="Center"
                   Opacity="0.7"/>
      </StackPanel>
      
      <!-- Error Message -->
      <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
              Background="#FFF3CD" 
              BorderBrush="#D6B656" 
              BorderThickness="1"
              CornerRadius="4"
              Padding="16"
              Margin="16"
              VerticalAlignment="Center">
        <StackPanel Spacing="8">
          <TextBlock Text="⚠️ Fehler" FontWeight="SemiBold" Foreground="#856404"/>
          <TextBlock Text="{Binding ErrorMessage}" Foreground="#856404"/>
          <Button Content="Erneut versuchen" 
                  Command="{Binding RefreshCommand}"
                  HorizontalAlignment="Left"/>
        </StackPanel>
      </Border>
      
      <!-- Orders DataGrid -->
      <ScrollViewer IsVisible="{Binding ShouldShowDataGrid}">
        <controls:DataGrid ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  SelectionMode="Single">
          
          <controls:DataGrid.Columns>
            
            <controls:DataGridTextColumn Header="Bestell-Nr." 
                                Binding="{Binding Id}" 
                                Width="100"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Kunde" 
                                Binding="{Binding FullName}" 
                                Width="200"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Bestelldatum" 
                                Binding="{Binding DateOrdered, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" 
                                Width="150"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Status" 
                                Binding="{Binding Status}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Zahlungsstatus" 
                                Binding="{Binding PaymentStatus}" 
                                Width="150"
                                CanUserSort="True"/>
            
            <controls:DataGridTextColumn Header="Gesamtsumme" 
                                Binding="{Binding Total, StringFormat=\{0:C2\}}" 
                                Width="120"
                                CanUserSort="True"/>
            
            <controls:DataGridTemplateColumn Header="Aktionen" 
                                    Width="120"
                                    CanUserSort="False">
              <controls:DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                  <Button Content="Details" 
                          Padding="8,4"
                          Command="{Binding $parent[controls:DataGrid].((vm:OrderListViewModel)DataContext).ViewOrderDetailsCommand}"
                          CommandParameter="{Binding}"
                          HorizontalAlignment="Center"/>
                </DataTemplate>
              </controls:DataGridTemplateColumn.CellTemplate>
            </controls:DataGridTemplateColumn>
            
          </controls:DataGrid.Columns>
          
          <controls:DataGrid.Styles>
            <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
            </Style>
            <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
              <Setter Property="Fill" Value="{DynamicResource SystemAccentColorLight2}"/>
            </Style>
          </controls:DataGrid.Styles>
          
        </controls:DataGrid>
      </ScrollViewer>
      
    </Grid>
    
    <!-- Pagination Footer -->
    <Border Grid.Row="2" 
            Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            Padding="16,12"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
            BorderThickness="0,1,0,0"
            IsVisible="{Binding !IsLoading}">
      
      <Grid ColumnDefinitions="*,Auto,*">
        
        <!-- Page Info Links -->
        <StackPanel Grid.Column="0" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    Spacing="8">
          <TextBlock Text="{Binding DisplayPageNumber, StringFormat=Seite \{0\}}" 
                     VerticalAlignment="Center"/>
          <TextBlock Text="von" 
                     Opacity="0.7" 
                     VerticalAlignment="Center"/>
          <TextBlock Text="{Binding TotalPages}" 
                     VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Navigation Buttons -->
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" 
                    Spacing="8">
          
          <Button Content="◀ Zurück" 
                  Command="{Binding PreviousPageCommand}"
                  IsEnabled="{Binding CanGoPrevious}"
                  Padding="12,6"/>
          
          <Button Content="Weiter ▶" 
                  Command="{Binding NextPageCommand}"
                  IsEnabled="{Binding CanGoNext}"
                  Padding="12,6"/>
          
        </StackPanel>
        
        <!-- Items Info Rechts -->
        <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Spacing="4">
          <TextBlock Text="{Binding Orders.Count, StringFormat=\{0\} Einträge}" 
                     Opacity="0.7"/>
          <TextBlock Text="von" 
                     Opacity="0.7"/>
          <TextBlock Text="{Binding TotalCount}" 
                     Opacity="0.7"/>
        </StackPanel>
        
      </Grid>
      
    </Border>
    
  </Grid>

</UserControl>