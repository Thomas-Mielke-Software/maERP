@page "/Warehouses/{warehouseId:int}"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">Lager - @Warehouse.Name</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/Warehouses/{warehouseId}/Edit")" />
</MudStack>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">ID: @Warehouse.Id</MudText>
        <MudText Typo="Typo.body1">Name: @Warehouse.Name</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="NavigateToEdit">Bearbeiten</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="NavigateToList">Zur√ºck zur Liste</MudButton>
    </MudCardActions>
</MudCard>