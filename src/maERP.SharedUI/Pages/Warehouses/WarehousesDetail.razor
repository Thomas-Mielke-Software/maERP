@page "/Warehouses/{warehouseId:int}"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@_title</PageTitle>

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">@_title</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/Warehouses/{WarehouseId}/Edit")" />
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Primary" Href="@($"/Warehouses/")" />
</MudStack>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">ID: @_warehouse.Id</MudText>
        <MudText Typo="Typo.body1">Name: @_warehouse.Name</MudText>
    </MudCardContent>
</MudCard>