@page "/Warehouses/Create"
@page "/Warehouses/{warehouseId:int}/Edit"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@Title</PageTitle>

<MudText Typo="Typo.h4" Class="mb-8">@Title</MudText>

<MudForm Model="@Warehouse" @ref="@Form" Validation="@(Validator.ValidateValue)" ValidationDelay="0">
    <MudGrid>
        <MudItem xs="6">
            <MudTextField @bind-Value="Warehouse.Name"
                          For="@(() => Warehouse.Name)"
                          Label="Lagername"
                          Required="true"
                          Variant="Variant.Text"
                          InputType="InputType.Text"
                          Class="mt-6" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       ButtonType="ButtonType.Button"
                       OnClick="@(OnValidSubmit)"
                       Class="mt-6">Speichern</MudButton>
        </MudItem>
    </MudGrid>
</MudForm>
