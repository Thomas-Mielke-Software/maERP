@page "/Customers/Create"
@page "/Customers/{customerId:int}/Edit"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@Title</PageTitle>

<MudText Typo="Typo.h4" Class="mb-8">@Title</MudText>

<MudForm Model="@Customer" @ref="@Form">
    <MudGrid>
        <MudItem xs="6">

            <MudTextField @bind-Value="Customer.Firstname"
                          For="@(() => Customer.Firstname)"
                          Label="Vorname"
                          Variant="Variant.Text"
                          InputType="InputType.Text"
                          Class="mt-6">
            </MudTextField>

            <MudTextField @bind-Value="Customer.Lastname"
                          For="@(() => Customer.Lastname)"
                          Label="Nachname"
                          Variant="Variant.Text"
                          InputType="InputType.Text"
                          Class="mt-6">
            </MudTextField>

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       ButtonType="ButtonType.Button"
                       OnClick="@(OnValidSubmit)"
                       Class="mt-6">Speichern</MudButton>
        </MudItem>
    </MudGrid>
</MudForm>

