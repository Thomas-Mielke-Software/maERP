@page "/Orders/Create"
@page "/Orders/{orderId:int}/Edit"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@Title</PageTitle>

<MudText Typo="Typo.h4" Class="mb-8">@Title</MudText>

<MudForm Model="@Order" @ref="@Form">
    <MudGrid>
        <MudItem xs="6">

            <MudTextField @bind-Value="Order.Id"
                          For="@(() => Order.Id)"
                          Label="Lagername"
                          Required="true"
                          Variant="Variant.Text"
                          InputType="InputType.Text"
                          Class="mt-6" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       ButtonType="ButtonType.Button"
                       OnClick="@(OnValidSubmit)"
                       Class="mt-6">Speichern</MudButton>
        </MudItem>
    </MudGrid>
</MudForm>