@page "/Settings/{Id:int}"
@using maERP.Domain.Dtos.Setting
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@_title</PageTitle>

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">@_title</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/Settings/{SettingId}/Edit")" />
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Primary" Href="@($"/Settings/")" />
</MudStack>

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">Systemeinstellung Details</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/Settings/{SettingId}/Edit")" />
</MudStack>

@if (_settingDetail == null)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.body1"><strong>Name:</strong> @_settingDetail.Key</MudText>
                    <MudText Typo="Typo.body1" Class="mt-3"><strong>Wert:</strong> @_settingDetail.Value</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
}
