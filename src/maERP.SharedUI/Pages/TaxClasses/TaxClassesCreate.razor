@page "/Taxclasses/Create"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<MudText Typo="Typo.h4" Class="mb-8">Steuersatz hinzuf√ºgen</MudText>

<MudForm Model="@TaxClassCreate" @ref="@_form" Validation="@(Validator.ValidateValue)" ValidationDelay="0">
    <MudGrid>
        <MudItem xs="6">
            <MudTextField @bind-Value="TaxClassCreate.TaxRate"
                          For="@(() => TaxClassCreate.TaxRate)"
                          Label="Steuersatz"
                          Variant="Variant.Text"
                          InputType="InputType.Number"
                          Required="true"
                          HelperText="In Prozent"
                          Class="mt-6" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       ButtonType="ButtonType.Button"
                       OnClick="@(OnValidSubmit)"
                       Class="mt-6">Speichern</MudButton>
        </MudItem>
    </MudGrid>
</MudForm>
