@page "/TaxClasses/{taxClassId:int}"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">Steuersatz - @TaxClass.TaxRate%</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/TaxClasses/{taxClassId}/edit")" />
</MudStack>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">ID: @TaxClass.Id</MudText>
        <MudText Typo="Typo.body1">Steuersatz: @TaxClass.TaxRate%</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/TaxClasses">Zurück zur Liste</MudButton>
    </MudCardActions>
</MudCard>