@page "/TaxClasses/{taxClassId:int}"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@_title</PageTitle>

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">@_title</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/TaxClasses/{TaxClassId}/Edit")" />
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Primary" Href="@($"/TaxClasses/")" />
</MudStack>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">ID: @_taxClassDetail.Id</MudText>
        <MudText Typo="Typo.body1">Steuersatz: @_taxClassDetail.TaxRate%</MudText>
    </MudCardContent>
</MudCard>