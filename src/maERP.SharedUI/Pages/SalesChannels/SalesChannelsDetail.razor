@page "/SalesChannels/{salesChannelId:int}"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@_title</PageTitle>

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">@_title</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/SalesChannels/{SalesChannelId}/edit")" />
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Primary" Href="@($"/SalesChannels/")" />
</MudStack>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">ID: @_salesChannelDetail.Id</MudText>
        <MudText Typo="Typo.body1">Typ: @_salesChannelDetail.SalesChannelType</MudText>
        <MudText Typo="Typo.body1">Name: @_salesChannelDetail.Name</MudText>
        <MudDivider Class="my-4" />
        
        <MudText Typo="Typo.h6">Verbindungsdaten:</MudText>
        <MudText Typo="Typo.body1">URL: @_salesChannelDetail.Url</MudText>
        <MudText Typo="Typo.body1">Benutzername: @_salesChannelDetail.Username</MudText>
        <MudText Typo="Typo.body1">Passwort: ********</MudText>
        <MudDivider Class="my-4" />
        
        <MudText Typo="Typo.h6">Synchronisierungsoptionen:</MudText>
        <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.body1">Produkte importieren: @(_salesChannelDetail.ImportProducts ? "Ja" : "Nein")</MudText>
                <MudText Typo="Typo.body1">Produkte exportieren: @(_salesChannelDetail.ExportProducts ? "Ja" : "Nein")</MudText>
                <MudText Typo="Typo.body1">Kunden importieren: @(_salesChannelDetail.ImportCustomers ? "Ja" : "Nein")</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.body1">Kunden exportieren: @(_salesChannelDetail.ExportCustomers ? "Ja" : "Nein")</MudText>
                <MudText Typo="Typo.body1">Aufträge importieren: @(_salesChannelDetail.ImportOrders ? "Ja" : "Nein")</MudText>
                <MudText Typo="Typo.body1">Aufträge exportieren: @(_salesChannelDetail.ExportOrders ? "Ja" : "Nein")</MudText>
            </MudItem>
        </MudGrid>
        <MudDivider Class="my-4" />
        
        <MudText Typo="Typo.body1">Lager-ID: @_salesChannelDetail.WarehouseId</MudText>
    </MudCardContent>
</MudCard>