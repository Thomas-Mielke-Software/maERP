@page "/AiPrompts/{aiPromptId:int}"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>@_title</PageTitle>

<MudStack Row="true" Class="mb-8">
    <MudText Typo="Typo.h4">@_title</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href="@($"/AiPrompts/{AiPromptId}/edit")" />
    <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Primary" Href="@($"/AiPrompts/")" />
</MudStack>

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">ID: @_aiPromptDetail.Id</MudText>
        <MudText Typo="Typo.body1">Identifier: @_aiPromptDetail.Identifier</MudText>
        <MudText Typo="Typo.body1">AI Model ID: @_aiPromptDetail.AiModelId</MudText>
        <MudDivider Class="my-4" />
        <MudText Typo="Typo.h6">Prompt Text:</MudText>
        <MudPaper Class="pa-4 mt-2" Elevation="0" Outlined="true">
            <MudText>@_aiPromptDetail.PromptText</MudText>
        </MudPaper>
    </MudCardContent>
</MudCard>