@page "/AiPrompts/Create"
@using maERP.Domain.Enums
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<MudText Typo="Typo.h4" Class="mb-8">AI Modell hinzufügen</MudText>

<MudForm Model="@AiPrompt" @ref="@_form" Validation="@(Validator.ValidateValue)" ValidationDelay="0">
    <MudGrid>
        <MudItem xs="6">
            <MudSelect T="AiModelType" Label="Typ" HelperText="Model-Typ" Placeholder="Typ auswählen" @bind-Value="@AiPrompt.AiModelType" Class="mt-6">
                <MudSelectItem Value="AiModelType.ChatGpt4O">ChatGPT 4o</MudSelectItem>
                <MudSelectItem Value="AiModelType.Claude35">Claude Opus 3.5</MudSelectItem>
            </MudSelect>
            
            <MudTextField @bind-Value="AiPrompt.Identifier"
                          For="@(() => AiPrompt.Identifier)"
                          Label="Identifier"
                          Required="true"
                          Variant="Variant.Text"
                          InputType="InputType.Text"
                          Class="mt-6"/>

            <MudTextField @bind-Value="AiPrompt.PromptText"
                          For="@(() => AiPrompt.PromptText)"
                          Label="Prompt"
                          Required="true"
                          Variant="Variant.Text"
                          InputType="InputType.Text"
                          Class="mt-6"/>

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       ButtonType="ButtonType.Button"
                       OnClick="@(OnValidSubmit)"
                       Class="mt-6">Speichern</MudButton>
        </MudItem>
    </MudGrid>
</MudForm>
