@if(_statisticProduct != null)
{
    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
        @_statisticProduct.ProductTotal Produkte gesamt<br />
        @_statisticProduct.ProductInStock davon auf Lager<br />
        @_statisticProduct.ProductInWarehouse im Lager
    </MudPaper>
}
else
{
    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
        <MudSkeleton Width="80%" />
        <MudSkeleton Width="60%" />
        <MudSkeleton Width="80%" />
    </MudPaper>
}