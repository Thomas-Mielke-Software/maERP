@if(_statisticSales != null)
{
    <MudCard Class="mt-4">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Umsatzstatistik</MudText>
            </CardHeaderContent>
        </MudCardHeader>
