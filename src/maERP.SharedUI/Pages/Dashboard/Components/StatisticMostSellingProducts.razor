@if (_statisticMostSellingProducts != null)
{
    <MudPaper Elevation="2" Class="pa-4" Style="height: auto;">
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-3">
            <MudTabPanel Text="Heute">
                <MudTable Items="@_statisticMostSellingProducts.TopProductsToday" Dense="true" Hover="true">
                    <HeaderContent>
                        <MudTh>Produkt</MudTh>
                        <MudTh>SKU</MudTh>
                        <MudTh>Menge</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Produkt">@context.ProductName</MudTd>
                        <MudTd DataLabel="SKU">@context.ProductSku</MudTd>
                        <MudTd DataLabel="Menge">@context.TotalQuantity</MudTd>
                    </RowTemplate>
                    <NoRecordsContent>
                        <MudText>Keine Verkäufe für diesen Zeitraum gefunden.</MudText>
                    </NoRecordsContent>
                </MudTable>
