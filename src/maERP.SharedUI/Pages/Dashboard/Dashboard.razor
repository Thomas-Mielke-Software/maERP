@page "/"
@page "/Dashboard"
@using maERP.SharedUI.Pages.Dashboard.Components
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<MudText Typo="Typo.h4" Class="mb-8">Dashboard</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <StatisticOrder />
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <StatisticProduct />
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">5</MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudGrid>
            <MudItem xs="12">
                <StatisticSales />
            </MudItem>
            <MudItem xs="12">
                @*<MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">5</MudPaper>*@
                <StatisticMostSellingProducts />
            </MudItem>
        </MudGrid>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudPaper Elevation="2" Class="pa-4" Style="height: 100%">
            @if (_isLoading)
            {
                <div class="d-flex align-center justify-center" style="height: 350px;">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                </div>
            }
            else if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="my-2">@_errorMessage</MudAlert>
                <MudChart ChartType="ChartType.Line" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%" Height="350px" ChartOptions="@Options" />
            }
            else
            {
                <MudChart ChartType="ChartType.Line" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%" Height="350px" ChartOptions="@Options" />
            }
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">7</MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">8</MudPaper>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">9</MudPaper>
    </MudItem>
</MudGrid>