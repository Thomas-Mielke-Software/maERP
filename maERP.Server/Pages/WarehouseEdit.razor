@page "/Warehouse/add"
@page "/Warehouse/edit/{warehouseId:int}"
@attribute [Authorize]
@using maERP.Data.Models
@inject NavigationManager NavigationManager
@inject maERP.Server.Contracts.IWarehousesRepository warehouseRepository

<h1>Lager</h1>

<hr />

<EditForm Model="@warehouse">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <div class="col-md-4">
            <input class="form-control" @bind="warehouse.Name" />
        </div>
        <ValidationMessage For="@(() => warehouse.Name)" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Speichern</button>
        <button class="btn btn-light" @onclick="Cancel">Abbrechen</button>
    </div>
</EditForm>

@code {

    [Parameter]
    public int warehouseId { get; set; }

    protected string Title = "hinzufügen";

    protected maERP.Data.Models.Warehouse warehouse = new();

    protected override async Task OnParametersSetAsync()
    {
        if (warehouseId != 0)
        {
            Title = "Bearbeiten";
            warehouse = await warehouseRepository.GetAsync(warehouseId);
        }
    }

    protected async Task SaveWarehouse()
    {
        if (warehouse.Id != 0)
        {
            await warehouseRepository.UpdateAsync(warehouse);
        }
        else
        {
            await warehouseRepository.AddAsync(warehouse);
        }
        Cancel();
    }

    public void Cancel()
    {
        NavigationManager.NavigateTo("/Warehouse");
    }
}