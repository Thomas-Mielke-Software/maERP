{
    "configurations": [
        {
            "name": "maERP.Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "maERP.Server-build",
            "program": "${workspaceFolder}/maERP.Server/bin/Debug/net8.0/maERP.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
    ]
}